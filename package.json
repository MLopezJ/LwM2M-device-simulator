{
  "name": "lwm2m-device-simulator",
  "version": "1.0.0",
  "description": "A LwM2M device simulator who send objects to a server over CoAP",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "start": "npx ts-node ./src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MLopezJ/LwM2M-device-simulator.git"
  },
  "keywords": [
    "LwM2M",
    "CoAP",
    "device",
    "simulator"
  ],
  "author": "Mauro Lopez",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MLopezJ/LwM2M-device-simulator/issues"
  },
  "homepage": "https://github.com/MLopezJ/LwM2M-device-simulator#readme",
  "devDependencies": {
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "12.0.27",
    "@swc/jest": "0.2.26",
    "@types/jest": "29.5.1",
    "@types/node": "18.16.3",
    "jest": "29.5.0",
    "ts-jest": "29.1.0",
    "typescript": "5.0.2"
  },
  "dependencies": {
    "@nordicsemiconductor/lwm2m-types": "2.1.3",
    "coap": "1.3.0",
    "commander": "10.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    },
    "testRegex": ".+\\.test\\.ts$",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  }
}
