{
  "name": "lwm2m-device-simulator",
  "version": "1.0.0",
  "description": "A LwM2M device simulator who send objects to a server over CoAP",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "start": "npx ts-node ./src/index.ts",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MLopezJ/LwM2M-device-simulator.git"
  },
  "keywords": [
    "LwM2M",
    "CoAP",
    "device simulator"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/MLopezJ/LwM2M-device-simulator/issues"
  },
  "homepage": "https://github.com/MLopezJ/LwM2M-device-simulator#readme",
  "devDependencies": {
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "12.0.27",
    "@nordicsemiconductor/eslint-config-asset-tracker-cloud-typescript": "11.0.2",
    "@swc/cli": "0.1.59",
    "@swc/jest": "0.2.26",
    "@types/jest": "29.5.1",
    "@types/lodash.assign": "4.2.7",
    "@types/node": "18.16.3",
    "@typescript-eslint/eslint-plugin": "5.49.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "prettier": "2.8.3",
    "ts-jest": "29.1.0",
    "tsx": "3.12.2",
    "typescript": "5.0.2"
  },
  "dependencies": {
    "@nordicsemiconductor/lwm2m-types": "2.4.1",
    "coap": "1.3.0",
    "commander": "10.0.1",
    "dotenv": "^16.2.0"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    },
    "testRegex": ".+\\.test\\.ts$",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "prettier": "@nordicsemiconductor/asset-tracker-cloud-code-style/.prettierrc",
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true
  },
  "publishConfig": {
    "access": "public"
  }
}
